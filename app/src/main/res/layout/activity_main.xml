<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/rectangle_rounded_corner"
        android:text="Hello World!">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:scrollbars="vertical|horizontal">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="true"
                android:layout_gravity="bottom">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_main_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|bottom"
                    android:singleLine="false"
                    android:ems="20"
                    android:text=" "
                    android:focusable="false"
                    android:textAlignment="viewEnd"
                    android:textColor="#000"
                    android:textSize="48sp" />
            </TableLayout>
        </ScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="4dp"
        android:background="#000"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_number_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorAccent"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/tv_number_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/colorAccent"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/tv_number_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/colorAccent"
                android:textSize="36sp" />

            <ImageView
                android:id="@+id/tv_number_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button_accent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_delete_forever_black_24dp"
                android:textColor="@color/colorAccent"
                android:textSize="36sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_number_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/colorAccent"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/tv_number_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/colorAccent"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/tv_number_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/colorAccent"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/tv_number_plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button_accent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="36sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_number_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/colorAccent"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/tv_number_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/colorAccent"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/tv_number_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/colorAccent"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/tv_number_minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button_accent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="36sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_number_divide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button_accent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="/"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/tv_number_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/tv_number_multiple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button_accent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/tv_number_equals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/circle_button_green"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="="
                android:textColor="#000"
                android:textSize="36sp" />

        </TableRow>

    </GridLayout>


</androidx.appcompat.widget.LinearLayoutCompat>